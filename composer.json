{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "elmapi/cms",
    "type": "project",
    "description": "A headless CMS built with Laravel, React, and Inertia.js.",
    "authors": [
        {
            "name": "Rasit Apalak",
            "email": "rasit@elmapicms.com",
            "homepage": "https://elmapicms.com"
        }
    ],
    "keywords": [
        "laravel",
        "framework",
        "cms",
        "headless",
        "api",
        "react",
        "inertia",
        "elmapi",
        "elmapicms"
    ],
    "license": "Proprietary",
    "require": {
        "php": "^8.2|^8.5",
        "doctrine/annotations": "^2.0",
        "fakerphp/faker": "^1.23",
        "inertiajs/inertia-laravel": "^2.0",
        "intervention/image": "^3.11",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.10.1",
        "league/flysystem-aws-s3-v3": "^3.0",
        "spatie/laravel-permission": "^6.17",
        "tightenco/ziggy": "^2.4",
        "zircote/swagger-php": "^5.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.18",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php post-autoload-handler.php || echo 'Skipping post-autoload-dump (packages may not be fully installed)'",
            "@php -r \"if (file_exists(__DIR__.'/artisan') && file_exists(__DIR__.'/vendor/laravel/framework/src/Illuminate/Events/functions.php')) { @exec('php artisan package:discover --ansi 2>&1', $output, $return); }\" || echo 'Skipping package:discover'"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php fix-laravel-deprecation.php"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "dev:ssr": [
            "npm run build:ssr",
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"php artisan inertia:start-ssr\" --names=server,queue,logs,ssr"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "pre-deploy": [
            "@php fix-deployment.php"
        ],
        "post-install-cmd": [
            "@php fix-deployment.php || true"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
